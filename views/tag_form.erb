<h1>Add new tag:</h1>

<form action="/tags" method="post">
  <label for="name">Tag Name:</label>
  <input id="name" name="name" type="text">

  <button class="btn" type="submit">Add tag</button>
</form>
<a href="/"><button class="btn" type="button">home</button></a>


<% if @tags.any?() %>
  <ul>
    <% @tags.each() do |tag| %>
      <li><form action="/tags/<%= tag.id() %>/delete" method="post">
        <input type="hidden" name="_method" value="delete">
         <button type="submit">Delete</button> <%= tag.name() %>
      </form></li>
      <% end %>
  </ul>

<% else %>

    <p>There are no tags added yet</p>

<% end %>
